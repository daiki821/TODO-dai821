!!!
%htmlf
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Todo
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    %header.header
      .container
        %h1.h-h1 Boards
        .dropdown
          - if user_signed_in?
            = image_tag current_user.user_avatar, class: 'header-icon'
          - else 
            = image_tag 'default-avatar.png', class: 'header-icon'
          .dropdown-content
            - if user_signed_in?
              = link_to 'プロフィール', profile_path
              %br/
              = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete'}
            - else
              = link_to 'ログイン',  new_user_session_path 
              %br/
              = link_to '登録', new_user_registration_path
        - if flash.present?
          .flash
            - flash.each do |key, value|
              %div{:class => key}= value

              
    = yield
