.container
  %ul
    - @profile.errors.full_messages.each do |message|
      %li
        = message
  %h2.title edit
  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    %div
      = f.label :nickname, 'ニックネーム', class: 'label'
    %div
      = f.text_field :nickname, class: 'text'
    %div
      = f.label :introduction,'自己紹介', class: 'label'
    %div
      = f.text_area :introduction, class: 'text text-a'
    %div
      = f.label :gender,'性別',class: 'label'
    %div
      = f.select :gender, Profile.genders.keys,{},{class: 'text'}
    %div
      = f.label :birthday, '生年月日',class: 'label'
    %div
      = f.date_field :birthday, class:'text'
    %div
      = f.label :subscribed, '通知を受け取る' ,class: 'inline-label'
      = f.check_box :subscribed
    %div
      = f.label :avatar, 'アバター', class: 'label'
    %div
      = f.file_field :avatar, class: 'label'
    = f.submit '保存', class: 'btn'
    
